{
  "name": "code-sol",
	"displayName": "Code Sol",
	"description": "Solution Library knowledge base integration for coding",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:code-sol.helloWorld"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
            "command": "code-sol.helloWorld",
            "title": "Hello World"
			}
		],
		"snippets": [
			{
				"language": "markdown",
				"path": "./snippets/md_snippets.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.62.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }

}
